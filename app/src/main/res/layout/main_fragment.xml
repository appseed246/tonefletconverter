<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.tonefletconverter.ui.main.MainViewModel" />

        <import type="com.example.tonefletconverter.model.TestState" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.question}"
            app:layout_constraintBottom_toTopOf="@+id/answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="204dp"
            android:text="@{viewModel.answer}"
            android:visibility="@{viewModel.state == TestState.Answer ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_c"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_c"
            android:onClick="@{() -> viewModel.switchState()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_csharp_dflat"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_b"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_asharp_bflat" />

        <Button
            android:id="@+id/button_asharp_bflat"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_asharp_bflat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_b"
            app:layout_constraintStart_toEndOf="@+id/button_a" />

        <Button
            android:id="@+id/button_a"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_asharp_bflat"
            app:layout_constraintStart_toEndOf="@+id/button_gsharp_aflat" />

        <Button
            android:id="@+id/button_gsharp_aflat"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_gsharp_aflat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_a"
            app:layout_constraintStart_toEndOf="@+id/button_g" />

        <Button
            android:id="@+id/button_g"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_g"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_gsharp_aflat"
            app:layout_constraintStart_toEndOf="@+id/button_fshap_gflat" />

        <Button
            android:id="@+id/button_fshap_gflat"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_fsharp_gflat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_g"
            app:layout_constraintStart_toEndOf="@+id/button_f" />

        <Button
            android:id="@+id/button_f"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_f"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_fshap_gflat"
            app:layout_constraintStart_toEndOf="@+id/button_e" />

        <Button
            android:id="@+id/button_e"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_f"
            app:layout_constraintStart_toEndOf="@+id/button_dsharp_eflat" />

        <Button
            android:id="@+id/button_dsharp_eflat"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_dsharp_eflat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_e"
            app:layout_constraintStart_toEndOf="@+id/button_d" />

        <Button
            android:id="@+id/button_csharp_dflat"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_csharp_dflat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_d"
            app:layout_constraintStart_toEndOf="@+id/button_c" />

        <Button
            android:id="@+id/button_d"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:text="@string/button_d"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_dsharp_eflat"
            app:layout_constraintStart_toEndOf="@+id/button_csharp_dflat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>